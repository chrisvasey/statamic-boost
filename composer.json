{
    "name": "chrisvasey/statamic-boost",
    "description": "Statamic-specific MCP tools and AI guidelines, extending Laravel Boost",
    "keywords": [
        "statamic",
        "laravel",
        "mcp",
        "ai",
        "boost"
    ],
    "homepage": "https://github.com/chrisvasey/statamic-boost",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Vasey",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/boost": "^1.1",
        "laravel/mcp": "^0.5",
        "statamic/cms": "^5.0||^6.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ChrisVasey\\StatamicBoost\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChrisVasey\\StatamicBoost\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ChrisVasey\\StatamicBoost\\StatamicBoostServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
